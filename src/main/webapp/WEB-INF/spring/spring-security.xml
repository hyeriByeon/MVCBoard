<?xml version="1.0" encoding="UTF-8"?>
<beans:bean xmlns="http://www.springframework.org/schema/security"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xsi:schemaLocation="http://www.springframework.org/schema/security
		http://www.springframework.org/schema/security/spring-security-4.1.xsd
		http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

	<http auto-config='true' use-expressions="true">
    	<intercept-url pattern="/board/**" access="hasRole('ROLE_USER')" />
    	<intercept-url pattern="/board/dba/**" access="hasRole('ROLE_ADMIN') and hasRole('DBA')" />
    	<intercept-url pattern="/" access="permitAll" />
    	<intercept-url pattern="/login" access="permitAll" />
   		<form-login login-page="/login" 
   					username-parameter="userId"
   					password-parameter="userPw"
   					authentication-failure-url="/error"/>
   		<csrf/>
		<logout logout-success-url="/"/>	
	</http>
	
	<authentication-manager>
		<authentication-provider>
			<user-service>
				<user name="admin" password="admin1234" authorities="ROLE_USER" />
				<user name="hyeri" password="hyeri1234" authorities="ROLE_USER"/>
				<user name="dbaAdmin" password="admin" authorities="ROLE_ADMIN, DBA"/>
			</user-service>
		</authentication-provider>
	</authentication-manager>


</beans:bean>